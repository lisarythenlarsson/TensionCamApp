<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tensioncamapp_project"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="17" />

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:label="Test1"
        android:targetPackage="com.example.tensionnsioncamapp_project" />
 	
    
    /** asks for permission to acces camera hardware */
    <uses-permission android:name="android.permission.CAMERA" />
 	
    /** asks for permission to write an external storage*/
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    /** asks for permission to acces flash*/
    <uses-permission android:name="android.permission.FLASHLIGHT"
             android:permissionGroup="android.permission-group.HARDWARE_CONTROLS"
             android:protectionLevel="normal"/>
    
 	/**checks if flash exists*/
 	  <uses-feature android:name="android.hardware.flash" />
 	
    /**checks if camera hardware exists*/
    <uses-feature android:name="android.hardware.camera" />
 	
    /**checks if the autofocus feature exists*/
    <uses-feature android:name="android.hardware.camera.autofocus" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black" >
       
        <uses-library android:name="android.test.runner" />

        <activity
            android:name="com.example.tensioncamapp_project.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.tensioncamapp_project.CameraActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.tensioncamapp_project.ViewPicActivity"
            android:label="@string/title_activity_view_pic" >
        </activity>
    </application>

</manifest>